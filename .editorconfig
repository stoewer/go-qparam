root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
tab_width = 4

[*.go]
indent_style = tab
tab_width = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[glide.*]
indent_style = space
indent_size = 2
